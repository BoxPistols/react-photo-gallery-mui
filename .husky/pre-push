#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

# 型チェック、lint、テストを実行
echo "🔍 Running type check..."
pnpm type-check

echo "🧹 Running lint check..."
pnpm lint-all

echo "🧪 Running tests..."
pnpm test --run

echo "🏗️  Running build test..."
pnpm build

echo "✅ All checks passed, pushing to remote..."